@{
    ViewBag.Title = "Datos de encuestas.";
}

<div class="banner">
    <h2>
        <a href="#">Datos de encuestas.</a>
    </h2>
</div>

<div class="blank">
    <div class="blank-page">

        @(Html.Kendo().Grid<InterimobelWS.Models.SURVEY_CUESTION_OP>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.visi_id).Title("No. Visita");
          columns.Bound(c => c.cust_id).Title("Cliente");
          columns.Bound(c => c.surv_id).Hidden();
          columns.Bound(c => c.surv_c1).Hidden();
          columns.Bound(c => c.surv_r1).Title("¿Que le parecio el servicio?");
          columns.Bound(c => c.surv_c2).Hidden();
          columns.Bound(c => c.surv_r2).Title("¿Que le parecio el tiempo de entrega?");
          columns.Bound(c => c.surv_txt).Title("Observaciones");
      })
      .ToolBar(toolbar =>
      {
          toolbar.Excel();
          toolbar.Pdf();
      })
      .Pageable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("SURVEY_CUESTION_OP_Read", "SurveyData"))
      )
        )
       </div>

</div>